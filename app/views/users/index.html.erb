<div class="row">
	<div class="col-md-4">
		<p>
		  <b>Name:</b>
		  <%= @user.name %>
		</p>

		<p>
		  <b>Email:</b>
		  <%= @user.email %>
		</p>
	</div>
	<div class="col-md-8">
		<% if !@playlists.empty? %>
			<table class="table">
			  <tr>
			    <th>Title</th>
			    <th></th>
			  </tr>

			<% @playlists.each do |playlist| %>
			  <tr>
			    <td><%= playlist.title %></td>
			    <td><%= link_to 'Show', select_playlist_path(playlist) %></td>
			  </tr>
			<% end %>
			</table>
		<% else %>
			<div class="panel panel-default">
			  <div class="panel-body">
			    Sorry, we cannot find any playlists of <%= @user.name %>.
			  </div>
			</div>
		<% end %>	
	</div>
</div>

<%= link_to 'Back', run_path %>
