<%= form_for @playlist, html:{class: "form-horizontal", role:"form"} do |f| %>
  <% if @playlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@playlist.errors.count, "error") %> prohibited this playlist from being saved:</h2>

      <ul>
      <% @playlist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => "form-control", :rows => 3 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :creator, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <p class="form-control-static"><%= @playlist.creator.name %></p>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :published, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.check_box :published %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => "btn btn-default" %>
      <%= link_to 'Show', @playlist, :class => "btn btn-link" %>
      <% if !@playlist.id.nil? %>
        <%= link_to 'Play', select_playlist_path(@playlist), :class => "btn btn-link" %>
      <% end %>
      <%= link_to 'Back', user_path(current_user), :class => "btn btn-link" %>
    </div>
  </div>
<% end %>
