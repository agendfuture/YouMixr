<header>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "YouMixr Alpha 0.2", root_path, :class=>"navbar-brand" %>

    <div class="player player-xs"> 
      <button class="btn btn-inverse btn-xs btn-play">
        <i class="icon-play icon-white"></i>
      </button>
      <button class="btn btn-inverse btn-xs btn-forward">
        <i class="icon-step-forward icon-white"></i>
      </button>
    </div>
  </div> 

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <%= form_tag(search_songs_path, :id => "search-form",:remote => true, :class => "navbar-form navbar-left search-form-header", :role => "search") do -%>
      <div class="input-group">
        <input name="song_search" type="text" class="form-control">
        <span class="input-group-btn">
          <button class="btn btn-default" type="submit">Go!</button>
        </span>
      </div>
    <% end %>
    <ul class="nav navbar-nav navbar-right">
        <li class="player-wraper"> 
          <div class="player player-lg">
            <button class="btn btn-inverse btn-xs btn-play">
              <i class="icon-play icon-white"></i>
            </button>
            <button class="btn btn-inverse btn-xs btn-forward">
              <i class="icon-step-forward icon-white"></i>
            </button>
            <span class="songtitle"></span>      
            <div id='progressbar'></div>
          </div>
        </li>
        <li><%= link_to "Home", home_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if current_user.nil? %>
          <li><%= link_to "Register", new_user_path %></li> 
          <li><%= link_to "Sign in", new_sessions_path %></li>
        <% else %>
          <li><%= link_to "Eingeloggt als " + current_user.name, users_show_path, 
                      :class => "navbar-link" %></li>
          <li><%= link_to "Logout", log_out_path %></li>
        <% end %>
      </ul>
  </div><!-- /.navbar-collapse -->
</nav>
</header>