<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">

    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
          
    <%= link_to "YouMixr Alpha 0.1", root_path, :class=>"brand" %>
    <div class="pull-left">
    <%= form_tag(search_songs_path, :id => "search-form",:remote => true, :class => "navbar-form pull-left search-form-header") do -%>
      <div class="input-append">
      	<input class="span3" name="song_search" id="appendedInputButton" placeholder="Search" type="text">
      	<button class="btn" type="submit">Go!</button>
      </div>
    <% end %>
    <div class="pull-right player">
      <button class="btn btn-inverse btn-play">
        <i class="icon-play icon-white"></i>
      </button>
      <button class="btn btn-inverse btn-forward">
        <i class="icon-step-forward icon-white"></i>
      </button>
      <span class="songtitle"></span>      
      <div id="ytPlayer" class="hidden-player"></div>
      <div id='progressbar'></div>
   </div>
    </div>
    <nav class="nav-collapse collapse">
      <ul class="nav pull-right">
        <li><%= link_to "Home",    'home' %></li>
        <li><%= link_to "Help",    'help' %></li>
        <% if current_user.nil? %>
          <li><%= link_to "Register", new_user_path %></li> 
          <li><%= link_to "Sign in", new_sessions_path %></li>
        <% else %>
          <li><%= link_to "Eingeloggt als "+current_user.name, users_show_path%></li>
          <li><%= link_to "Logout", log_out_path %></li>
        <% end %>
      </ul>
    </nav><!--/.nav-collapse -->
           
  </div>
</header>
